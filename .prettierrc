{
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "parser": "solidity-parse",
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "useTabs": false,
                "tabWidth": 2,
                "printWidth": 80,
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "semi": false
            }
        }
    ]
}